<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp" />
            <gradient android:angle="90" android:endColor="#ffc66b" android:startColor="#ffab32" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:bottomLeftRadius="2dp" android:topLeftRadius="2dp" />
            <gradient android:angle="90" android:endColor="#d9d9d9" android:startColor="#a1a09e" />
        </shape>
    </item>
</selector>