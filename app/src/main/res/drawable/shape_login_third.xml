<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:height="1dp" android:gravity="center_vertical">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180" android:centerColor="#e0e0e0" android:endColor="@color/white"
                android:startColor="@color/white" android:type="linear"/>
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <size
                android:width="100dp" android:height="1dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>
