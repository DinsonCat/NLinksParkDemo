<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rec_ededed_fdfdff"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <TextView
        android:id="@+id/descPlate"
        style="@style/MonthlyRecordText"
        android:drawableLeft="@mipmap/cp"
        android:text="车牌号"/>

    <TextView
        android:id="@+id/tvPlate"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:text="车牌号"/>

    <TextView
        android:id="@+id/descStartTime"
        style="@style/MonthlyRecordText"
        android:layout_below="@id/descPlate"
        android:drawableLeft="@mipmap/sj"
        android:text="包月开始日期"/>

    <TextView
        android:id="@+id/tvStartTime"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@id/descPlate"
        android:text="包月开始日期"/>

    <TextView
        android:id="@+id/descEndTime"
        style="@style/MonthlyRecordText"
        android:layout_below="@id/descStartTime"
        android:drawableLeft="@drawable/ssrq"
        android:text="包月结束日期"/>

    <TextView
        android:id="@+id/tvEndTime"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@id/descStartTime"
        android:text="包月结束日期"/>

    <TextView
        android:id="@+id/descPrice"
        style="@style/MonthlyRecordText"
        android:layout_below="@+id/descEndTime"
        android:drawableLeft="@mipmap/tcfy"
        android:text="包月价格"/>

    <TextView
        android:id="@+id/tvPrice"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/descEndTime"
        android:text="包月价格"/>

    <TextView
        android:id="@+id/descMonthCount"
        style="@style/MonthlyRecordText"
        android:layout_below="@+id/descPrice"
        android:drawableLeft="@mipmap/ic_sand_clock"
        android:text="包月时长"/>

    <TextView
        android:id="@+id/tvMonthCount"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/descPrice"
        android:layout_marginBottom="12dp"
        android:text="包月时长"/>

    <RelativeLayout
        android:id="@+id/rlCoupon"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descMonthCount">

        <TextView
            android:id="@+id/descOrderMoney"
            style="@style/MonthlyRecordText"
            android:drawableLeft="@mipmap/tcfy"
            android:text="订单金额"/>

        <TextView
            android:id="@+id/tvOrderMoney"
            style="@style/MonthlyRecordText"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:text="订单金额"/>

        <TextView
            android:id="@+id/descCouponMoney"
            style="@style/MonthlyRecordText"
            android:layout_below="@+id/descOrderMoney"
            android:drawableLeft="@mipmap/tcfy"
            android:text="优惠金额"/>

        <TextView
            android:id="@+id/tvCouponMoney"
            style="@style/MonthlyRecordText"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/descOrderMoney"
            android:text="优惠金额"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/descLastMoney"
        style="@style/MonthlyRecordText"
        android:layout_below="@+id/rlCoupon"
        android:drawableLeft="@mipmap/tcfy"
        android:text="实付金额"/>

    <TextView
        android:id="@+id/tvPayMoney"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rlCoupon"
        android:layout_marginBottom="12dp"
        android:text="实付金额"/>
</RelativeLayout>