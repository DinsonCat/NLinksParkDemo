<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/spacing_medium">

    <TextView
        android:id="@+id/tv_item_appointment_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/appointment_list_park_price"
        android:drawablePadding="@dimen/text_drawable_padding"
        android:gravity="center_vertical"
        android:textColor="@color/text_primary"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_item_appointment_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_appointment_time"
        android:drawableLeft="@mipmap/appointment_list_deadline"
        android:drawablePadding="@dimen/text_drawable_padding"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/spacing_medium"
        android:textColor="@color/text_primary"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/right"/>
</RelativeLayout>