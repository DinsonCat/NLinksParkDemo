<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<View
		android:id="@+id/v_share_blank"
		android:layout_width="match_parent"
		android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="@color/alpha_background"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:background="@color/share_window_background"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:padding="@dimen/spacing_medium"
			android:text="请选择分享平台"
			android:textColor="@color/text_secondary"
			android:textSize="@dimen/title_text_size"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/spacing_medium"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_share_sina"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawablePadding="@dimen/spacing_medium"
				android:drawableTop="@mipmap/icon_share_sina"
				android:gravity="center"
				android:text="新浪微博"
				android:textColor="@color/text_primary"/>

			<TextView
				android:id="@+id/tv_share_wx_chat"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawablePadding="@dimen/spacing_medium"
				android:drawableTop="@mipmap/icon_share_wx_chat"
				android:gravity="center"
				android:text="微信"
				android:textColor="@color/text_primary"/>

			<TextView
				android:id="@+id/tv_share_wx_circle"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawablePadding="@dimen/spacing_medium"
				android:drawableTop="@mipmap/icon_share_wx_circle"
				android:gravity="center"
				android:text="微信朋友圈"
				android:textColor="@color/text_primary"/>

			<TextView
				android:id="@+id/tv_share_wx_favorite"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:drawablePadding="@dimen/spacing_medium"
				android:drawableTop="@mipmap/icon_share_wx_favorite"
				android:gravity="center"
				android:text="微信收藏"
				android:textColor="@color/text_primary"/>
		</LinearLayout>

		<TextView
			android:id="@+id/tv_share_cancel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#7fffffff"
			android:gravity="center"
			android:padding="@dimen/spacing_medium"
			android:text="取消分享"
			android:textColor="@color/text_secondary"
			android:textSize="@dimen/title_text_size"/>
	</LinearLayout>
</LinearLayout>