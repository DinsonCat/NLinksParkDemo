<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rec_ededed_fdfdff"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <TextView
        android:id="@+id/descOrderState"
        style="@style/MonthlyRecordText"
        android:drawableLeft="@drawable/ddzt"
        android:text="订单状态" />

    <TextView
        android:id="@+id/tvOrderState"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:text="订单状态" />

    <TextView
        android:id="@+id/descPrice"
        style="@style/MonthlyRecordText"
        android:layout_below="@id/descOrderState"
        android:drawableLeft="@drawable/ddzt"
        android:text="包月价格" />

    <TextView
        android:id="@+id/tvPrice"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@id/descOrderState" />

    <TextView
        android:id="@+id/descMonthlyTime"
        style="@style/MonthlyRecordText"
        android:layout_below="@id/descPrice"
        android:drawableLeft="@mipmap/sj"
        android:text="包月时长" />

    <TextView
        android:id="@+id/tvMonthlyTime"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@id/descPrice"
        android:text="包月时长" />

    <TextView
        android:id="@+id/descStartTime"
        style="@style/MonthlyRecordText"
        android:layout_below="@+id/descMonthlyTime"
        android:drawableLeft="@drawable/ssrq"
        android:text="生效日期" />

    <TextView
        android:id="@+id/tvStartTime"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/descMonthlyTime"
        android:text="生效日期" />

    <TextView
        android:id="@+id/descEndTime"
        style="@style/MonthlyRecordText"
        android:layout_below="@+id/descStartTime"
        android:drawableLeft="@drawable/jssj"
        android:text="结束时间" />

    <TextView
        android:id="@+id/tvEndTime"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/descStartTime"
        android:text="结束时间" />

    <TextView
        android:id="@+id/descRuleTime"
        style="@style/MonthlyRecordText"
        android:layout_below="@+id/descEndTime"
        android:drawableLeft="@drawable/fwsj"
        android:text="服务时间" />

    <TextView
        android:id="@+id/tvRuleTime"
        style="@style/MonthlyRecordText"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/descEndTime"
        android:layout_marginBottom="12dp"
        android:text="服务时间" />
</RelativeLayout>