<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/login_bg1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bg1"
        android:adjustViewBounds="true"
        android:src="@mipmap/login_bg2"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:src="@mipmap/login_left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_bg1"
        android:background="@drawable/login_win_bg">

        <RadioGroup
            android:id="@+id/rg_login_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/rb_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_login_tab_bg_left"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="账号密码登录"
                android:textColor="@color/selector_login_tab"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/rb_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_login_tab_bg_right"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="手机验证码登录"
                android:textColor="@color/selector_login_tab"
                android:textSize="16sp"/>
        </RadioGroup>

        <com.nlinks.parkdemo.widget.EditTextClear
            android:id="@+id/et_username"
            style="@style/Login.UserName"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg_login_mode"/>

        <com.nlinks.parkdemo.widget.EditTextPwd
            android:id="@+id/et_password"
            style="@style/Login.Password"
            android:layout_width="0dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_username"/>

        <RelativeLayout
            android:id="@+id/rl_login_sms"
            android:layout_width="0dp"
            android:layout_height="@dimen/login_et_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_username">

            <EditText
                android:id="@+id/et_sms"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/login_align"
                android:layout_marginRight="@dimen/login_align"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"/>

            <TextView
                android:id="@+id/tv_getCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/et_sms"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape_rec_r2_blue_blue"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/login_align"
            android:paddingTop="20dp"
            android:text="忘记密码?"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_register"
            app:layout_constraintTop_toBottomOf="@+id/rl_login_sms"
            app:layout_goneMarginTop="@dimen/login_et_height"/>

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/login_align"
            android:layout_marginRight="@dimen/login_align"
            android:background="@drawable/shape_login_register"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="立即注册"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_forget_pwd"
            app:layout_constraintBottom_toBottomOf="@+id/tv_forget_pwd"
            app:layout_constraintLeft_toRightOf="@+id/tv_forget_pwd"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/btn_login"
            style="@style/BigBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_align"
            android:layout_marginRight="@dimen/login_align"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_temp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_forget_pwd"/>

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_login_third"
            android:gravity="center"
            android:text="第三方登录"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/loginByWechat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/loginByWechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/login_wechat"
            android:gravity="center_horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp"
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:text="微信"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/loginByQQ"/>

        <TextView
            android:id="@+id/loginByQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/login_qq"
            android:gravity="center_horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="20dp"
            android:visibility="gone"
            android:paddingBottom="10dp"
            android:text="QQ"
            app:layout_constraintBottom_toBottomOf="@+id/loginByWechat"
            app:layout_constraintLeft_toRightOf="@+id/loginByWechat"
            app:layout_constraintRight_toLeftOf="@+id/loginByAli"/>

        <TextView
            android:id="@+id/loginByAli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/login_ali"
            android:gravity="center_horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="gone"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="支付宝"
            app:layout_constraintBottom_toBottomOf="@+id/loginByQQ"
            app:layout_constraintLeft_toRightOf="@+id/loginByQQ"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>