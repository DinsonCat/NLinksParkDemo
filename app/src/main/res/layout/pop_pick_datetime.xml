<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<View
		android:id="@+id/v_pick_city_pop_blank"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/windowBackground"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_pop_cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:text="取消"
				android:textColor="@color/text_primary"
				android:textSize="15sp"/>

			<View
				android:layout_width="0dp"
				android:layout_height="1px"
				android:layout_weight="1"/>

			<TextView
				android:id="@+id/tv_pop_submit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:text="确定"
				android:textColor="@color/text_primary"
				android:textSize="15sp"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal"
			android:paddingBottom="10dp"
			android:paddingTop="10dp">

			<com.nlinks.parkdemo.widget.wheelpicker.WheelPicker
				android:id="@+id/wp_pop_1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_weight="1"
				app:wheel_atmospheric="true"
				app:wheel_item_space="15dp"
				app:wheel_item_text_color="@color/text_secondary"
				app:wheel_item_text_size="15sp"
				app:wheel_selected_item_position="0"
				app:wheel_selected_item_text_color="@color/text_primary"
				app:wheel_visible_item_count="5"/>

			<com.nlinks.parkdemo.widget.wheelpicker.WheelPicker
				android:id="@+id/wp_pop_2"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_weight="1"
				app:wheel_atmospheric="true"
				app:wheel_item_space="15dp"
				app:wheel_item_text_color="@color/text_secondary"
				app:wheel_item_text_size="15sp"
				app:wheel_selected_item_position="0"
				app:wheel_selected_item_text_color="@color/text_primary"
				app:wheel_visible_item_count="5"/>

			<com.nlinks.parkdemo.widget.wheelpicker.WheelPicker
				android:id="@+id/wp_pop_3"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_weight="1"
				app:wheel_atmospheric="true"
				app:wheel_item_space="15dp"
				app:wheel_item_text_color="@color/text_secondary"
				app:wheel_item_text_size="15sp"
				app:wheel_selected_item_position="0"
				app:wheel_selected_item_text_color="@color/text_primary"
				app:wheel_visible_item_count="5"/>

			<com.nlinks.parkdemo.widget.wheelpicker.WheelPicker
				android:id="@+id/wp_pop_4"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_weight="1"
				app:wheel_atmospheric="true"
				app:wheel_item_space="15dp"
				app:wheel_item_text_color="@color/text_secondary"
				app:wheel_item_text_size="15sp"
				app:wheel_selected_item_position="0"
				app:wheel_selected_item_text_color="@color/text_primary"
				app:wheel_visible_item_count="5"/>

			<com.nlinks.parkdemo.widget.wheelpicker.WheelPicker
				android:id="@+id/wp_pop_5"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:layout_weight="1"
				app:wheel_atmospheric="true"
				app:wheel_item_space="15dp"
				app:wheel_item_text_color="@color/text_secondary"
				app:wheel_item_text_size="15sp"
				app:wheel_selected_item_position="0"
				app:wheel_selected_item_text_color="@color/text_primary"
				app:wheel_visible_item_count="5"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>