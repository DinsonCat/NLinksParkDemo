<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/rl_root"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/item_white_divider_normal"
	android:padding="@dimen/spacing_medium">

	<ImageView
		android:id="@+id/iv_item_icon"
		android:layout_width="23dp"
		android:layout_height="23dp"
		android:layout_centerVertical="true"
		android:adjustViewBounds="true"
		android:scaleType="centerInside"
		android:src="@mipmap/icon_park_bussiness_hours"/>

	<ImageView
		android:id="@+id/iv_item_right"
		android:layout_width="23dp"
		android:layout_height="23dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:adjustViewBounds="true"
		android:scaleType="centerInside"
		android:src="@mipmap/icon_right"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@id/iv_item_right"
		android:layout_toRightOf="@id/iv_item_icon"
		android:orientation="vertical"
		android:paddingLeft="5dp"
		android:paddingRight="5dp">

		<TextView
			android:id="@+id/tv_item_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
			android:textColor="@color/text_primary"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/tv_item_address"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:text="@string/app_name"
			android:textColor="@color/text_primary"
			android:textSize="12sp"/>
	</LinearLayout>
</RelativeLayout>